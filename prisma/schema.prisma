// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGO_URL")
}

model User {
  id       String  @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  email    String  @unique
  password String
  role     Role
  mentee   Mentee?
  mentor   Mentor?
}

model Mentee {
  id               String   @id @default(auto()) @map("_id") @db.ObjectId
  user             User     @relation(fields: [userId], references: [id])
  userId           String   @unique @db.ObjectId
  availableMentors Mentor[] @relation(fields: [mentorIds], references: [id])
  mentorIds        String[] @db.ObjectId
  selectedMentorId String?  @db.ObjectId
}

model Mentor {
  id              String    @id @default(auto()) @map("_id") @db.ObjectId
  user            User      @relation(fields: [userId], references: [id])
  userId          String    @unique @db.ObjectId
  projects        Project[]
  selectedMentees Mentee[]  @relation(fields: [menteeIds], references: [id])
  menteeIds       String[]  @db.ObjectId
}

model Project {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  url         String
  description String
  mentor      Mentor @relation(fields: [mentorId], references: [id])
  mentorId    String @db.ObjectId
}

enum Role {
  MENTOR
  MENTEE
}
